@model TODOList.Models.TaskModel

<div class="navbar navbar-expand-lg navbar-light bg-light">
     
        <div class="card-header">
         <blockquote class="blockquote">&emsp; @Html.DisplayFor(model => model.Name)</blockquote>
         @Html.DisplayFor(model => model.StartTime) : @Html.DisplayFor(model => model.EndTime) &emsp;
         @Html.DisplayNameFor(model => model.Priority):  @Html.DisplayFor(model => model.Priority) &emsp;
         

        <form asp-action="MarkAsDone" asp-controller="Day">
        <input  class="TaskRadio" type="checkbox" name="Id" id="@Model.Id" value="@Model.Id"/>
            <label>
                @Html.DisplayNameFor(model => model.IsDone)
             </label> &emsp;

        </form>
        </div>

           <br> <br>
        <div style="clear:both;">
        <div class="card-text">
            @Html.DisplayFor(model => model.Description)
        </div>
        <br><br>

        <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#exampleModal">Edit</button>
        
         <button type="button" class="btn btn-outline-info">Postpone</button>
         <button type="button" class="btn btn-outline-danger">Delete</button>
         </div>



</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        @Html.Partial("_EditTask")
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>